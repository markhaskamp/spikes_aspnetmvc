<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true">
  <class name="MyKindleBooks.Domain.Category, MyKindleBooks" table="Production.ProductCategory" lazy="false">
    <id name="rowguid">
      <generator class="native" />
    </id>
    <property name="Name" />
    <property name="ProductCategoryID" />

    <set name="subcategories" table="Production.ProductSubcategory" inverse="true" cascade="all">
      <key column="ProductCategoryID" />
      <one-to-many class="MyKindleBooks.Domain.Subcategory" />
    </set>
  </class>
</hibernate-mapping>
