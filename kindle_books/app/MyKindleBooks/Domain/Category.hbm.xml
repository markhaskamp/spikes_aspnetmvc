<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="MyKindleBooks"
                   namespace="MyKindleBooks.Domain">
  <class name="Category, MyKindleBooks"
         table="Production.ProductCategory">
    
    <id column="rowguid" type="System.Guid">
      <generator class="native" />
    </id>
    <property name="Name" />
    <property name="ProductCategoryID" />

    <bag name="subcategories" table="Production.ProductSubcategory">
      <key column="ProductCategoryID" />
      <one-to-many class="Subcategory, MyKindleBooks" />
    </bag>

  </class>
</hibernate-mapping>
